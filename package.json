{
  "name": "mocklets",
  "version": "0.2.0",
  "description": "Reusable standard mocks and fakes for popular browser and Node.js APIs, framework/library objects for Jest",
  "homepage": "https://github.com/codesplinta/mocklets",
  "main": "dist/mocklets.cjs.js",
  "module": "dist/mocklets.es.js",
  "typings": "./types/index.d.ts",
  "files": [
    "examples",
    ".export",
    "dist",
    "types",
    ".npmignore",
    "CHANGELOG.md",
    "LICENSE",
    "package-lock.json",
    "README.md"
  ],
  "keywords": [
    "jest",
    "testing",
    "mocks",
    "fakes",
    "resuable"
  ],
  "scripts": {
    "lint": "standard --fix",
    "test": "jest",
    "build:rollup": "rollup -c rollup.config.js",
    "cleanup": "rimraf dist",
    "build": "npm run cleanup && npm run build:rollup"
  },
  "peerDependencies": {
    "typescript": ">= 3.5.x"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=12.2.0 <20.0.0"
  },
  "author": {
    "name": "Ifeora Okechukwu <isocroft@gmail.com>",
    "url": "https://isocroft.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codesplinta/mocklets.git"
  },
  "bugs": "https://github.com/codesplinta/mocklets/issues",
  "license": "Apache-2.0",
  "standard": {
    "globals": [
      "global",
      "jest",
      "jasmine",
      "expect",
      "process",
      "beforeAll",
      "afterAll",
      "beforeEach",
      "afterEach"
    ],
    "ignore": [
      "/examples",
      "/.github",
      "/test",
      "rollup.config.js"
    ]
  },
  "jest": {
    "automock": false,
    "bail": 1,
    "collectCoverage": true,
    "verbose": true,
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testPathIgnorePatterns": [
      "!<rootDir>/test"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/test"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
		  "@mocklets/jest": "<rootDir>/packages/src/jest/index.js",
      "@mocklets/vitest": "<rootDir>/packages/src/vitest/index.js",
		  "(.+)\\.js": "$1",
	  },
    "coverageThreshold": {
      "global": {
        "branches": 19,
        "functions": 20,
        "lines": 40,
        "statements": 40
      },
      "./index.js/": {
        "branches": 0,
        "statements": 12
      }
    },
    "coverageDirectory": "coverage",
    "setupFilesAfterEnv": [
      "./setupTests.js"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-strip": "^3.0.4",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/mock-fs": "4.13.4",
    "css-mediaquery": "0.1.2",
    "express": "^4.21.0",
    "fetch-mock": "12.4.0",
    "ghooks": "^2.0.4",
    "jest": "^26.6.3",
    "mock-fs": "5.2.0",
    "msw": "2.3.4",
    "prettier": "^1.16.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.68.0",
    "standard": "^16.0.4",
    "timekeeper": "2.3.1",
    "whatwg-fetch": "3.6.20"
  },
  "dependencies": {
    "css-mediaquery": "0.1.2",
    "mock-fs": "5.2.0",
    "mock-socket": "9.3.1",
    "msw": "2.3.4",
    "timekeeper": "2.3.1",
    "whatwg-fetch": "3.6.20"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint && npm run build",
      "pre-push": "echo \"ready to publish to remote\"",
      "post-merge": "rimraf node_modules && npm install",
      "post-rewrite": "npm install"
    }
  }
}
